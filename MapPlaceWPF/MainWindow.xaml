<Window x:Class="MapPlaceWPF.MapGame"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Карта" Height="600" Width="700">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="500"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Canvas x:Name="MapCanvas" Grid.Column="0" Width="500" Height="500" Background="White" MouseLeftButtonDown="MapCanvas_MouseLeftButtonDown"/>
        <StackPanel Grid.Column="1" Margin="10">
            <ListBox x:Name="ListBoxCoordinates" Height="400" Margin="0,0,0,10"/>
            <Button x:Name="ButtonGenerate" Content="Рестарт" Click="ButtonGenerate_Click" Margin="0,0,0,10" Padding="5"/>
            <Button x:Name="ExitButton" Content="Выход" Click="ExitButton_Click" Padding="5"/>
        </StackPanel>
    </Grid>
</Window>